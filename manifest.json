{
    "manifest_version": 3,
    "name": "MACE",
    "description": "Add a cat",
    "version": "1.0",
    "permissions": ["storage", "activeTab", "scripting"],

    "options_page": "options.html",
    "chrome_url_overrides" : {
    "newtab": "newtab.html"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/cat2-16.png",
            "48": "/images/cat2-48.png",
            "128": "/images/cat2-128.png"
        }
    },

    "icons": {
        "16": "/images/cat1-16.png",
        "48": "/images/cat1-48.png",
        "128": "/images/cat1-128.png"
    },

    "content_scripts": [
        {
            "matches": ["https://www.google.com/*"],
            "css": ["main.css"]
        }
    ]
}